rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // Users collection: only the owner may access their doc
    match /users/{userId} {
      allow create: if isOwner(userId);
      allow read, update, delete: if isOwner(userId);

      // Categories under a user
      match /categories/{categoryId} {
        allow read, write: if isOwner(userId);

        // Resources under a category
        match /resources/{resourceId} {
          // Owner can read/write; public resources readable by anyone
          allow read: if (
            isOwner(userId) ||
            (resource.data.visibility == 'public')
          );
          allow create: if isOwner(userId) && request.resource.data.ownerId == userId;
          allow update, delete: if isOwner(userId) && resource.data.ownerId == userId;
        }
      }
    }

    // collectionGroup rules for any resources subcollection
    match /{path=**}/resources/{resourceId} {
      // Read allowed for owner or if marked public
      allow read: if isSignedIn() && resource.data.ownerId == request.auth.uid
        || resource.data.visibility == 'public';

      // Create requires auth and ownerId consistency
      allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;

      // Update/Delete restricted to owner
      allow update, delete: if isSignedIn() && resource.data.ownerId == request.auth.uid;
    }

    // Explicit deny for anything not covered above
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
